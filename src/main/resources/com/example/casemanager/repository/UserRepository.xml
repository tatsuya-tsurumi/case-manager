<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.casemanager.repository.UserRepository">
	<!-- 全件検索 -->
	<select id="selectAll"
			resultType="com.example.casemanager.entity.User">
		SELECT user_id, user_name
			FROM users
		ORDER BY user_id
	</select>
	
	<!-- 1件検索 -->
	<select id="selectById"
			resultType="com.example.casemanager.entity.User">
		SELECT user_id, user_name
			FROM users
		WHERE user_id = #{userId}
	</select>
	
</mapper>